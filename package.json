{
  "name": "vscode-readme-previewer",
  "displayName": "vscode-readme-previewer",
  "description": "A inline extension to preview README files",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-readme-previewer.previewReadMe",
        "title": "Preview README"
      },
      {
        "command": "vscode-readme-previewer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-readme-previewer.colorPicker",
        "title": "Open README Preview Color Picker"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-readme-previewer.previewReadMe",
        "key": "ctrl+alt+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && resourceExtname == '.md'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-readme-previewer.previewReadMe",
          "when": "resourceExtname == '.md'",
          "group": "navigation"
        },
        {
          "command": "vscode-readme-previewer.colorPicker",
          "when": "resourceExtname == '.md'",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-readme-previewer.colorPicker",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "README Previewer Settings",
      "properties": {
        "readmePreviewer.backgroundColor": {
          "type": "string",
          "default": "",
          "description": "Background color for README preview. Leave empty to follow VS Code theme."
        },
        "readmePreviewer.textColor": {
          "type": "string",
          "default": "",
          "description": "Text color for README preview. Leave empty to follow VS Code theme."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}
